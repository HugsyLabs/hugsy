{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read(**)",
      "Write(**/test/**)",
      "Bash(git *)",
      "Bash(npm test)"
    ],
    "ask": [
      "Bash(sudo *)",
      "Bash(npm publish)",
      "Write(**/production/**)"
    ],
    "deny": [
      "Write(*:*password=*)",
      "Write(*:*secret=*)",
      "Write(*:*api_key=*)",
      "Bash(rm -rf /*)",
      "Bash(:(){ :|:& };:)",
      "Read(**/.env)"
    ]
  },
  "hooks": {},
  "env": {
    "NODE_ENV": "development"
  }
}