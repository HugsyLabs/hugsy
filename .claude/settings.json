{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read(**)",
      "Write(**/*.ts)",
      "Write(**/*.js)",
      "Write(**/*.json)",
      "Write(**/*.md)",
      "Write(**/test/**)",
      "Bash(git *)",
      "Bash(npm test)",
      "Bash(npm run *)",
      "Bash(pnpm *)",
      "Bash(prettier *)",
      "Bash(eslint * --fix)"
    ],
    "ask": [
      "Bash(npm publish)",
      "Write(**/.github/**)",
      "Write(**/package.json)"
    ],
    "deny": [
      "Write(**/node_modules/**)",
      "Write(**/.git/**)",
      "Write(**/dist/**)",
      "Bash(rm -rf /)",
      "Bash(sudo *)"
    ]
  },
  "hooks": {},
  "env": {
    "NODE_ENV": "development",
    "PROJECT": "hugsy"
  }
}